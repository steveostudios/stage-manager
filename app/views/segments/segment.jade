if (segment)
  if segment.type == 'red' || segment.type == 'blue' || segment.type == 'green'
    li.header(id=segment._id, rel=segment.order, class=segment.type)
      .header
        .type
          input(type='hidden', value=segment.type).input_type
          .pup_typeSelector(style="display:none;")
            if (segment.type == 'red')
              img(src='../img/ico_headerRed.png', data-type='red').selected
            else
              img(src='../img/ico_headerRed.png', data-type='red')
            if (segment.type == 'blue')
              img(src='../img/ico_headerBlue.png', data-type='blue').selected
            else
              img(src='../img/ico_headerBlue.png', data-type='blue')
            if (segment.type == 'green')
              img(src='../img/ico_headerGreen.png', data-type='green').selected
            else
              img(src='../img/ico_headerGreen.png', data-type='green')
        .title
          =segment.title
        .options.hidable
          a(href='#').headerEdit
            i.icon-pencil
          a(href='#').rowRemove
            i.icon-remove
          span.handle
            i.icon-reorder
  else
    li.segment(id=segment._id, rel=segment.order)
      .segment
        .type
            img(src='../img/ico_'+ segment.type +'.png', width='35', height='35')
        .title
          =segment.title
        .trt
          =segment.trt
        .options.hidable
          a(href='#').rowEdit
            i.icon-pencil
          a(href='#').rowRemove
            i.icon-remove
          span.handle
            i.icon-reorder
      .segment_edit
        .type
          input(type='hidden', value=segment.type).input_type
          img(src='../img/ico_'+ segment.type +'.png', width='35', height='35', class='img_edit')
          .pup_typeSelector
            types = ["slate", "note", "bible", "mic", "tv", "megaphone"]
            each type, i in types
              if (segment.type == type)
                img(src='../img/ico_#{type}.png', data-type='#{type}').selected
              else
                img(src='../img/ico_#{type}.png', data-type='#{type}')
        .title.withInput
          input(type='text', value=segment.title, placeholder='Title').input_title
        .trt.withInput
          input(type='text', value=segment.trt, placeholder='Time').input_trt
        .options
          a(href='#').rowSave S
          a(href='#').rowCancel C