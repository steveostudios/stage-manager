extends ../layouts/default

block main
  h1 Events

block content
  #events Program
    ul.head
      li.date Date
      li.series Series
      li.title Title
    ul#body
      each event in events
        li(id=event._id).event
          .date
            =event.date 
          .series
            =event.series 
          .title
            =event.title  
        if (pages > 1)
          .pagination
            ul
              != createPagination(pages, page)
    script(type='text/javascript', src='/js/eventlist.js')