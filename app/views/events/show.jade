extends ../layouts/default

block main
  h1= event.date + ' | ' + event.series + ' | ' + event.title

block content
  #segments
    ul.head
      li.segment Segment
      li.options Options
    ul.body
      each segment in event.segments
        include ../segments/segment
    #controls
      a#btn_addSegment(href='#')
        img(src='../img/btn_addSegment.png', width='16', height='16')
      a#btn_addHeader(href='#')
        img(src='../img/btn_addHeader.png', width='46', height='26')
      #pup_addHeader
        a#btn_addHeader_blue(href="#")
          img(src='../img/ico_headerBlue.png', width='18', height='19')
        a#btn_addHeader_green(href="#")
          img(src='../img/ico_headerGreen.png', width='18', height='19')
        a#btn_addHeader_red(href="#")
          img(src='../img/ico_headerRed.png', width='18', height='19')
  #sidebar
    #preview
      #currentTimer 29:56
      #currentTitle The Sermon Title
      #next NEXT The final song 5:00
    #alerts
      h1 Alerts
    #calls
      h1 Calls
    #notes
      h1 Notes
      ul(style='padding:5px 15px;margin:5px;font-size: 11px;color:#878686;')
