extends ../layouts/default

block main
  #event 
    #eventDate 
      =event.date
    #eventSeries 
      =event.series
    #eventTitle 
      =event.title
    a(href='#')#eventEdit
      img(src='../img/ico_editRow.png', width='17', height='17').hidable
  #event_edit
    input(type='text', placeholder='date', value=event.date)#input_eventDate
    input(type='text', placeholder='series', value=event.series)#input_eventSeries
    input(type='text', placeholder='title', value=event.title)#input_eventTitle
    a(href='#')#eventSave S
    a(href='#')#eventCancel C
     
block content
  #segment_pane
    ul.head
      li.segment Segment
      li.options Options
    ul#body
      each segment in event.segments
        include ../segments/segment
    #controls
      a#btn_addSegment(href='#')
        img(src='../img/btn_addSegment2.png')
      a#btn_addHeader(href='#')
        img(src='../img/btn_addHeader.png', width='46', height='26')
      #pup_addHeader
        a#btn_addHeader_blue(href="#")
          img(src='../img/ico_headerBlue.png', width='18', height='19')
        a#btn_addHeader_green(href="#")
          img(src='../img/ico_headerGreen.png', width='18', height='19')
        a#btn_addHeader_red(href="#")
          img(src='../img/ico_headerRed.png', width='18', height='19')
  #alert_pane
    ul#alertFavs
      li.alertFav Hello World
      li.alertFav Hold the mic up closer to your face
      li.alertFav It's time to wrap it up! 
    #alertInput
      input#inp_alert(type='text')
      a#btn_alert(href='#') Show
      a#btn_alertFav(href='#') Fav
  #call_pane
    p CALL
    
  #sidebar
    #preview
      #time
      #currentTimer 
      #currentTitle 
    #alerts
      h1 Alerts
      ul#alertList
    #calls
      h1 Calls
  footer
    a#btn_clockPrevious(href='#')
      img(src='../img/btn_prev2.png')
    a#btn_clockNext(href='#')
      img(src='../img/btn_next2.png')
    a#btn_clockReset(href='#')
      img(src='../img/btn_reset2.png')
    a#btn_clockClear(href='#') Clear
    a#btn_mode_list.mode_selected(href='#') List
    a#btn_mode_alert(href='#') Alert
    a#btn_mode_call(href='#') Call
  #pup_alert
    h1 Delete Segment
    p This action cannot be undone?
    .buttons
      a(href='#').submit yes
      a(href='#').cancel no
    
  script
    var room = '#{event._id}'
    var current = '#{event.current}'
    var currentStart = '#{event.currentStart}'
  script(type='text/javascript', src='/js/event.js')
  script(type='text/javascript', src='/js/pane_alert.js')
    
    