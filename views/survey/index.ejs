        <div class="col-xs-4 col-md-4"><input type="text" id="inp_poll_h" class="form-control inp_poll" placeholder="Poll H"></div>
      </div>
      <div id="editor_buttons"></div>
    </div>
    <div class="col-md-4">
      <ul id="list_questions"></ul>
    </div>
  </div>
</div>
